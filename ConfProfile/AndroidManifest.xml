<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="no.infoss.confprofile"
    android:versionCode="1"
    android:versionName="0.1.1 (pre-alpha)" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- debug feature -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity android:name=".Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".InstallProfile">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data 
                    android:scheme="file" 
                    android:host=""
                    android:pathPattern=".*\\.mobileconfig" 
                    android:mimeType="*/*" />
                <data 
                    android:scheme="http" 
                    android:host="*"
                    android:pathPattern=".*\\.mobileconfig" 
                    android:mimeType="application/x-apple-aspen-config" />
                <data 
                    android:scheme="https" 
                    android:host="*"
                    android:pathPattern=".*\\.mobileconfig" 
                    android:mimeType="application/x-apple-aspen-config" />
                <data 
                    android:scheme="content" 
                    android:pathPattern=".*\\.mobileconfig" 
                    android:mimeType="application/x-apple-aspen-config" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>
