<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center">
    
    <TextView 
        android:id="@+id/noProfilesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_no_profiles_msg" />

    <LinearLayout 
        android:id="@+id/progressPanel" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:orientation="vertical" 
        android:gravity="center" 
        android:visibility="gone">
        
	    <ProgressBar
	        android:id="@+id/progressPanelBar"
	        style="?android:attr/progressBarStyleLarge"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	
	    <TextView
	        android:id="@+id/progressPanelLabel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/main_loading_profiles_msg"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

</LinearLayout>
